<%= form_for @user_set, html: {multipart: true,
  class: "form-horizontal style-form"} do |f|%>
  <%= f.hidden_field :user_id, value: @user.id %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :title, class: "control-label col-md-3" %>
      <div class="col-md-9">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :category_id, "Category", class: "control-label col-md-3" %>
      <div class="col-md-9">
        <%= f.collection_select :category_id, @categories, :id, :name,
          {prompt: "Select a category"}, {class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :set_type, "Available For:", class: "control-label col-md-3" %>
      <div class="col-md-9">
        <%= f.select :set_type, options_for_select(@user_set_types), {},
          {class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "control-label col-md-3" %>
      <div class="col-md-9">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <%= f.fields_for :words, Word.new do |builder| %>
      <%= render "set_word_fields", f: builder %>
    <% end %>
  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary" %>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
<% end %>
<div id="page-wrapper" >
  <div id="page-inner">
    <div class="row">
      <div class="col-md-12">
        <br>
             <%= link_to new_admin_category_path, class: "btn btn-success btn-xs
          pull-right btn-panel" do %>
          <i class="fa fa-plus-circle">
            <%= t ".add" %>
          </i>
        <% end %>
      </div>
    </div>
    <hr/>          
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="page-header">
             <i class="fa fa-globe"></i> <%= t ".title" %>
              <small class="pull-right"><%= t ".date" %><br><%= datetime Time.now %></small>
              <small class="pull-right"><%= t ".totalcategories" %><br><%= User.count %></small>
            </h2>
            
            <div class="box-tools">
              <div class="input-group" style="width: 300px;">
                <input type="text" name="table_search" 
                class="form-control input-sm pull-right" placeholder="Search">
                <div class="input-group-btn">
                  <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                </div>
              </div>
            </div>

        </div>

        
        <div class="panel-body">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">  
            <thead>
              <tr>
                <th>
                  <%= t ".category_name" %>
                </th>
                <th>
                  <i class="fa fa-sticky-note fa-lg"><br><br><%= t ".category_description" %></i>
                </th>
                <th>
                  <i class="fa fa-camera fa-lg"><br><br><%= t ".category_picture" %></i>
                </th>
                <th>
                  <i class="fa fa-wrench fa-lg"><br><br><%= t ".category_actions" %></i>
                </th>
              </tr>
            </thead>
              <tbody>
                <% if @categories.any? %>
                  <% @categories.each do |category| %>
                     <tr>
                      <td>
                        <%= category.name %>
                      </td>
                      <td>
                        <%= category.description %>
                      </td>
                      <td>
                        <%= image_tag category.picture, size: "80x80" %>
                      </td>
                      <td>
                        <div class="admin-actions">
                          <%= link_to  admin_category_path(category), 
                            class: "button btn btn-success btn-xs" do %>
                            <i class="fa fa-file-text"></i>
                          <% end %>
                          <%= link_to edit_admin_category_path(category), 
                            class: "button btn btn-primary btn-xs" do %>
                            <i class="fa fa-pencil"></i>
                          <% end %>
                          <%= link_to admin_category_path(category), method: :delete,
                            data: {confirm: "You want to delete?"},
                            class: "button btn btn-danger btn-xs" do %>
                            <i class="fa fa-trash-o"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>

            <div class="col-sm-5"><div class="dataTables_info" id="example2_info" role="status" aria-live="polite">Showing 1 to 4 of <%= Category.count %> categories</div></div>

            <div class="text-center">
              <%= will_paginate %>
            </div>
            <% else %>
              <%= t :no_items_found %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

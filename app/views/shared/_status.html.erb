<div class="vertical-container">

<h3><% @user ||= current_user %><h3>

<div>
  <li><a href="#"><%= t ".total_words" %> <span class="pull-right badge bg-aqua">
  <strong id="following" class="stat">
    <%= @user.total_words_learned %> 
  </strong></span></a></li>
</div>

<div> 
  <li><a href="#"><%= t ".following" %> <span class="pull-right badge bg-aqua">
  <strong id="following" class="stat">
    <%= @user.following.count %>
  </strong></span></a></li>
</div>

<div>
  <li><a href="#"><%= t ".followers" %><span class="pull-right badge bg-red">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong></span></a></li>
</div>


</div>



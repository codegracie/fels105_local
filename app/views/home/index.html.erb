<% if logged_in? %>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <%= t ".panel_title" %> <%= current_user.full_name %>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4">
            <div class="box box-widget widget-user-2">
                <div class="widget-user-header bg-grey">
                  <div class="widget-user-image">
                    <img class="img-circle">
                      <%= link_to image_tag(current_user.avatar, size: "150x150"), current_user %>
                    </img>
                   </div>
                  <h3 class="widget-user-username"><%= current_user.full_name %></h3>
                  <h5 class="widget-user-desc">Rockstar</h5>
                </div>
                <div class="box-footer no-padding">
                  <ul class="nav nav-stacked">
                    <li><a><%= render "shared/status" %> <span class="pull-right badge bg-blue"></span></a></li>
                    <li><a><%= render "shared/follow_form" %> <span class="pull-right badge bg-blue"></span></a></li>
                  </ul>
                </div>
              </div>
            </div>


        

        <div class="col-md-8">
          <div class="row">
            <%= link_to t(".button_words"), words_path, class: "btn btn-primary btn-lg" %>
            <%= link_to t(".button_lessons"), categories_path, class: "btn btn-primary btn-lg" %>
          </div>
          <div class="row">
            <h3><%= t ".activities" %></h3>
            <ul>
              <% @activities.each do |activity| %>
                <li>
                  <%= link_to image_tag(activity.log.avatar, size: "50x50"), activity.log %>
                  <%= link_to activity.log.full_name, activity.log %>
                  <div class="activity-content">
                    <%= activity.content %>
                  </div>
                </li>
                <hr>
                <%= will_paginate @activities %>
              <% end %>
            </ul>
          </div>
        </div>
    </div>
  </div>
<% else %>
  <%= render "signup" %>
<% end%>